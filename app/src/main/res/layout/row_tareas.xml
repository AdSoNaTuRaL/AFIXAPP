<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linear_layout">

    <TextView
        android:id="@+id/tipoDeTarea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Lazer"
        android:textSize="25sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <TextView
            android:id="@+id/observaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Lazer"
            android:ellipsize="marquee"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_weight="2"/>


        <TextView
            android:id="@+id/frequencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Frequencia"
            android:ellipsize="marquee"
            android:textSize="14sp"
            android:singleLine="true"
            android:textStyle="bold"
            android:layout_weight="2"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Inicio: "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dataInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Data Inicio"
            android:ellipsize="marquee"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_weight="2"
            android:gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Fim: "
            android:gravity="start"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/dataFim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Data Fim"
            android:ellipsize="marquee"
            android:textSize="14sp"
            android:singleLine="true"
            android:gravity="start"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora Inicio: "
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/horaInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hora Inicio"
            android:ellipsize="marquee"
            android:textSize="14sp"
            android:singleLine="true"
            android:layout_weight="2"
            android:gravity="start"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hora Fim: "
            android:gravity="start"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/horaFim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hora Fim"
            android:ellipsize="marquee"
            android:textSize="14sp"
            android:singleLine="true"
            android:gravity="start"
            android:layout_weight="2"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGray"/>

</LinearLayout>